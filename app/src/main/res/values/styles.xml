<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LogoText" parent="BaseText">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TitleText" parent="BaseText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SubtitleText" parent="BaseText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ClickableText" parent="BaseText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionText" parent="BaseText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContentText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ItemMusicTitleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ItemMusicArtistText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorActivatedHighlight">@color/light_purple</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/medium_gray_transparent</item>
        <item name="android:textColorHint">@color/medium_gray_transparent</item>
        <item name="android:background">@drawable/bg_rounded_edit_text_transparent</item>
        <item name="android:backgroundTint">@color/light_gray_transparent</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

</resources>